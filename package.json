{
  "name": "quiz-rpg",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "prepare": "husky install",
    "typecheck": "tsc -b",
    "prebuild": "node -r dotenv/config scripts/sheet_to_quizpack.mjs || echo \"[quizpack] skip\"",
    "build": "pnpm -C apps/student build && pnpm -C apps/admin build",
    "dev:student": "pnpm -C apps/student dev",
    "dev:admin": "pnpm -C apps/admin dev",
    "manifest": "DIST_DIR=apps/student/dist tsx scripts/build-manifest.mjs",
    "sri": "DIST_DIR=apps/student/dist tsx scripts/postbuild-sri.mjs",
    "manifest:student": "DIST_DIR=apps/student/dist tsx scripts/build-manifest.mjs",
    "sri:student": "DIST_DIR=apps/student/dist tsx scripts/postbuild-sri.mjs",
    "manifest:admin": "DIST_DIR=apps/admin/dist tsx scripts/build-manifest.mjs",
    "sri:admin": "DIST_DIR=apps/admin/dist tsx scripts/postbuild-sri.mjs",
    "build:quizpack": "node -r dotenv/config scripts/sheet_to_quizpack.mjs"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.75.0"
  }
}
